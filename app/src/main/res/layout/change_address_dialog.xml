<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#E1F5FE"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#81D4FA"
            android:gravity="center_horizontal"
            android:padding="12dp"
            android:text="Change my address:"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/newAddressCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your new city"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/newAddressStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your new street"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/newAddressHouse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your new house number"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/cancelBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cancel" />

            <Button
                android:id="@+id/saveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="save" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>