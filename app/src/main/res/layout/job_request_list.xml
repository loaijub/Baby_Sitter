        android:text="No Requests found"
        />
    <ListView
        android:id="@+id/jobRequestsList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/nav1"
        android:layout_below="@+id/title" />

</LinearLayout>